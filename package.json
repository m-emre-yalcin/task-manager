{
  "name": "task-manager",
  "version": "1.1.0",
  "main": "electron/main.ts",
  "author": {
    "name": "M. Emre Yalcin",
    "email": "emrreyalcin@gmail.com"
  },
  "description": "Desktop app for managing tasks on kanban board in local environment",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "vite build",
    "build:tc": "run-p type-check vite build",
    "preview": "vite preview --port 4173",
    "electron:dev": "concurrently \"electron .\" \"npm run dev\"",
    "electron": "electron .",
    "test:unit": "vitest --environment jsdom",
    "test:e2e": "start-server-and-test preview http://localhost:4173/ 'cypress open --e2e'",
    "test:e2e:ci": "start-server-and-test preview http://localhost:4173/ 'cypress run --e2e'",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "concurrently": "^7.3.0",
    "dexie": "^3.2.2",
    "electron-squirrel-startup": "^1.0.0",
    "pinia": "^2.0.16",
    "pinia-plugin-persist": "^1.0.0",
    "vue": "^3.2.37",
    "vue-router": "^4.1.2",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^16.11.45",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.0.2",
    "@vue/tsconfig": "^0.1.3",
    "cypress": "^10.3.0",
    "electron": "^19.0.10",
    "electron-builder": "^23.3.3",
    "eslint": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "sass": "^1.54.0",
    "start-server-and-test": "^1.14.0",
    "typescript": "~4.7.4",
    "vite": "^3.0.1",
    "vitest": "^0.18.1",
    "vue-tsc": "^0.38.8"
  },
  "build": {
    "productName": "Task Manager",
    "appId": "com.TaskManager.app",
    "directories": {
      "buildResources": "dist",
      "output": "out"
    },
    "files": [
      "dist",
      "electron",
      "src/assets/colors.json"
    ],
    "dmg": {
      "icon": "electron/icon.icns"
    },
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "electron/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Development"
    },
    "nsis": {
      "installerIcon": "electron/icon.ico",
      "installerHeaderIcon": "electron/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "publish": {
      "provider": "github",
      "owner": "m-emre-yalcin",
      "repo": "https://github.com/m-emre-yalcin/task-manager",
      "releaseType": "release"
    }
  }
}